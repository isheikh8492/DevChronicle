<Application x:Class="DevChronicle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DevChronicle"
             xmlns:converters="clr-namespace:DevChronicle.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:CountAndNotMiningToVisibilityConverter x:Key="CountAndNotMiningToVisibilityConverter"/>
            <converters:SelectedDayAndNotSummarizingConverter x:Key="SelectedDayAndNotSummarizingConverter"/>
            <converters:BoolToEyeIconConverter x:Key="BoolToEyeIconConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
