<Page x:Class="DevChronicle.Views.SessionDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Session Detail"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="56,24,56,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Session Header Card -->
        <ui:Card Grid.Row="0" Margin="0,0,0,8">
            <Border Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Session Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock FontSize="24" FontWeight="SemiBold" Text="{Binding Session.Name, FallbackValue='Loading...', TargetNullValue='Loading...'}"/>
                        <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0">
                            <Run Text="Repository: "/>
                            <Run Text="{Binding Session.RepoPath, FallbackValue='...', TargetNullValue='...'}"/>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,0">
                            <Run Text="Created: "/>
                            <Run Text="{Binding Session.CreatedAt, StringFormat='yyyy-MM-dd HH:mm', FallbackValue='...', TargetNullValue='...'}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:Button Content="Back to Sessions"
                                   Icon="{ui:SymbolIcon ArrowLeft24}"
                                   Appearance="Secondary"
                                   Command="{Binding BackToSessionsCommand}"
                                   Margin="0,0,8,0" Click="Button_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ui:Card>

        <!-- Summarization Navbar -->
        <ui:Card Grid.Row="1" Margin="0,0,0,8">
            <Border Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:Button Grid.Column="0"
                               Content="Summarize Selected"
                               Icon="{ui:SymbolIcon Sparkle24}"
                               Appearance="Primary"
                               Command="{Binding Summarization.SummarizeSelectedDayCommand}"
                               CommandParameter="{Binding DayBrowser.SelectedDay}"
                               Margin="0,0,10,0">
                        <ui:Button.IsEnabled>
                            <MultiBinding Converter="{StaticResource SelectedDayAndNotSummarizingConverter}">
                                <Binding Path="DayBrowser.SelectedDay"/>
                                <Binding Path="Summarization.IsSummarizing"/>
                            </MultiBinding>
                        </ui:Button.IsEnabled>
                    </ui:Button>

                    <ui:Button Grid.Column="1"
                               Content="Summarize All Pending Days"
                               Icon="{ui:SymbolIcon Sparkle24}"
                               Appearance="Primary"
                               Command="{Binding Summarization.SummarizePendingDaysCommand}"
                               IsEnabled="{Binding Summarization.IsSummarizing, Converter={StaticResource InverseBoolConverter}}"
                               Margin="0,0,10,0"/>

                    <ui:Button Grid.Column="2"
                               Content="Stop Summarizing"
                               Icon="{ui:SymbolIcon Stop24}"
                               Appearance="Danger"
                               Command="{Binding Summarization.StopCommand}"
                               IsEnabled="{Binding Summarization.IsSummarizing}"/>
                </Grid>
            </Border>
        </ui:Card>

        <!-- Main Content: Day List + Detail Pane (No page scroll) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Day Cards List -->
            <ui:Card Grid.Column="0" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <ui:Card.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Mine last N days"
                                  Command="{Binding Mining.MineLastWindowCommand}"
                                  IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"/>
                        <MenuItem Header="Backfill previous N days"
                                  Command="{Binding Mining.BackfillPreviousWindowCommand}"
                                  IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"/>
                        <MenuItem Header="{Binding Mining.BackfillOrderLabel}"
                                  Command="{Binding Mining.BackfillOrderCommand}"
                                  IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"/>
                    </ContextMenu>
                </ui:Card.ContextMenu>
                <Grid Margin="16,20,16,16" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="Days in This Session"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   VerticalAlignment="Top"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding DayBrowser.Days}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectedItem="{Binding DayBrowser.SelectedDay, Mode=TwoWay}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Stretch"
                                 MinHeight="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10"
                                            Padding="12"
                                            CornerRadius="10"
                                            BorderBrush="#4A4F54"
                                            BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="#3D4246"/>
                                        </Border.Background>
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#AFC4D9"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="#3F4B5A"
                                                                                Duration="0:0:0.15"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="#3D4246"
                                                                                Duration="0:0:0.15"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.DayBrowser.SelectDayCommand, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Column="0" Grid.RowSpan="2" CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="#bd7cff"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                                                <Setter Property="Background" Value="#8FB7E6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock Grid.Column="1" Grid.Row="0"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="{Binding Date, StringFormat=MMM dd\, yyyy}"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                       Margin="10,0,0,0"/>

                                            <Border Grid.Column="1" Grid.Row="0"
                                                    Background="#bd7cff"
                                                    CornerRadius="8"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Right"
                                                    Margin="10,0,0,0">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="12"
                                                           Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="1" Grid.Row="1"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="10,6,0,0">
                                                <Run Text="{Binding CommitCount, Mode=OneWay}"/><Run Text=" "/><Run Text="commits"/>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" Grid.Row="1"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,6,0,0">
                                                <Run Text="+"
                                                     Foreground="#3FB950"
                                                     FontWeight="SemiBold"/>
                                                <Run Text="{Binding Additions, Mode=OneWay}"
                                                     Foreground="#3FB950"
                                                     FontWeight="SemiBold"/>
                                                <Run Text=" / "/>
                                                <Run Text="-"
                                                     Foreground="#F85149"
                                                     FontWeight="SemiBold"/>
                                                <Run Text="{Binding Deletions, Mode=OneWay}"
                                                     Foreground="#F85149"
                                                     FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ui:InfoBar Grid.Row="0"
                                        Title="Mining in progress"
                                        Message="{Binding Mining.Status}"
                                        Severity="Informational"
                                        IsOpen="True"
                                        Visibility="{Binding Mining.IsMining, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        IsClosable="False"/>

                            <ui:InfoBar Grid.Row="1"
                                        Title="No Days Found"
                                        Message="Mine commits to populate this session with days."
                                        Severity="Informational"
                                        IsOpen="True"
                                        IsClosable="False">
                                <ui:InfoBar.Visibility>
                                    <MultiBinding Converter="{StaticResource CountAndNotMiningToVisibilityConverter}">
                                        <Binding Path="DayBrowser.Days.Count"/>
                                        <Binding Path="Mining.IsMining"/>
                                    </MultiBinding>
                                </ui:InfoBar.Visibility>
                            </ui:InfoBar>
                        </Grid>
                </Grid>
            </ui:Card>

            <!-- Right: Detail Pane with Segmented Switch -->
            <ui:Card Grid.Column="2" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <Border Padding="20,20,20,16" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Selected Day Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,12" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"
                                       Text="{Binding DayBrowser.SelectedDay.Date, Mode=OneWay, StringFormat='MMMM dd, yyyy', FallbackValue='Select a day', TargetNullValue='Select a day'}"/>
                            <TextBlock Grid.Row="1" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run Text="Commits: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.CommitCount, Mode=OneWay, FallbackValue='-'}"/>
                                <Run Text="   Additions: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.Additions, Mode=OneWay, FallbackValue='-'}"/>
                                <Run Text="   Deletions: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.Deletions, Mode=OneWay, FallbackValue='-'}"/>
                            </TextBlock>
                            <Border Grid.Row="2"
                                    Height="1"
                                    Margin="0,12,0,0"
                                    Background="{DynamicResource CardStrokeColorDefaultBrush}"/>
                        </Grid>

                        <!-- Summary Preview -->
                        <Grid Grid.Row="1" VerticalAlignment="Top">
                            <StackPanel>
                                <TextBlock Text="SUMMARY PREVIEW"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,12"/>

                                <ItemsControl ItemsSource="{Binding SelectedDayBullets}">
                                    <ItemsControl.Style>
                                        <Style TargetType="ItemsControl">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSelectedDaySummary}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ItemsControl.Style>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="â€¢"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding}"
                                                           TextWrapping="Wrap"
                                                           FontSize="13"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="No summary yet. Select a day and run summarization."
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSelectedDaySummary}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
