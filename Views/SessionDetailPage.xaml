<Page x:Class="DevChronicle.Views.SessionDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:DevChronicle.ViewModels"
      Title="Session Detail"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <Style x:Key="SegmentToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentFillColorSecondaryBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="56,24,56,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Session Header Card -->
        <ui:Card Grid.Row="0" Margin="0,0,0,8">
            <Border Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Session Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock FontSize="24" FontWeight="SemiBold" Text="{Binding Session.Name, FallbackValue='Loading...', TargetNullValue='Loading...'}"/>
                        <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0">
                            <Run Text="Repository: "/>
                            <Run Text="{Binding Session.RepoPath, FallbackValue='...', TargetNullValue='...'}"/>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,0">
                            <Run Text="Created: "/>
                            <Run Text="{Binding Session.CreatedAt, StringFormat='yyyy-MM-dd HH:mm', FallbackValue='...', TargetNullValue='...'}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:Button Content="Back to Sessions"
                                   Icon="{ui:SymbolIcon ArrowLeft24}"
                                   Appearance="Secondary"
                                   Command="{Binding BackToSessionsCommand}"
                                   Margin="0,0,8,0" Click="Button_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ui:Card>

        <!-- Main Content: Day List + Detail Pane (No page scroll) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Day Cards List -->
            <ui:Card Grid.Column="0" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <Grid Margin="16,20,16,16" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="Days in This Session"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   VerticalAlignment="Top"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding DayBrowser.Days}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectedItem="{Binding DayBrowser.SelectedDay, Mode=TwoWay}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Stretch"
                                 MinHeight="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10"
                                            Padding="12"
                                            CornerRadius="8"
                                            Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorPrimaryBrush}"/>
                                                        <Setter Property="BorderThickness" Value="2,1,1,1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.DayBrowser.SelectDayCommand, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" FontSize="14" FontWeight="SemiBold"
                                                           Text="{Binding Date, StringFormat=MMM dd\, yyyy}"/>
                                                <ui:Badge Grid.Column="1" Content="{Binding Status}" Appearance="Secondary"/>
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <Run Text="{Binding CommitCount, Mode=OneWay}"/><Run Text=" "/><Run Text=" commits"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="12,0,0,0">
                                                    <Run Text="+"/><Run Text="{Binding Additions, Mode=OneWay}"/><Run Text=" "/><Run Text="/"/><Run Text=" "/><Run Text="-"/><Run Text="{Binding Deletions, Mode=OneWay}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ui:InfoBar Grid.Row="2"
                                    Title="No Days Found"
                                    Message="Mine commits to populate this session with days."
                                    Severity="Informational"
                                    IsOpen="True"
                                    Visibility="{Binding DayBrowser.Days.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                    IsClosable="False"
                                    Margin="0,12,0,0"/>
                </Grid>
            </ui:Card>

            <!-- Right: Detail Pane with Segmented Switch -->
            <ui:Card Grid.Column="2" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <Border Padding="20,20,20,16" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Selected Day Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"
                                       Text="{Binding DayBrowser.SelectedDay.Date, StringFormat='MMMM dd, yyyy', FallbackValue='Select a day', TargetNullValue='Select a day'}"/>
                            <TextBlock Grid.Row="1" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run Text="Commits: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.CommitCount, FallbackValue='-'}"/>
                                <Run Text="   Additions: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.Additions, FallbackValue='-'}"/>
                                <Run Text="   Deletions: "/>
                                <Run Text="{Binding DayBrowser.SelectedDay.Deletions, FallbackValue='-'}"/>
                            </TextBlock>
                        </Grid>

                        <!-- Segmented Switch -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="4"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleButton Content="Day"
                                              MinWidth="72"
                                              Command="{Binding SetPanelCommand}"
                                              CommandParameter="{x:Static vm:SessionDetailPanel.Day}"
                                              Grid.Column="0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource SegmentToggleStyle}">
                                            <Setter Property="Margin" Value="0,0,6,0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Day}">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <ToggleButton Content="Mining"
                                              MinWidth="88"
                                              Command="{Binding SetPanelCommand}"
                                              CommandParameter="{x:Static vm:SessionDetailPanel.Mining}"
                                              Grid.Column="1">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource SegmentToggleStyle}">
                                            <Setter Property="Margin" Value="0,0,6,0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Mining}">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <ToggleButton Content="Summarization"
                                              MinWidth="140"
                                              Command="{Binding SetPanelCommand}"
                                              CommandParameter="{x:Static vm:SessionDetailPanel.Summarization}"
                                              Grid.Column="2">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource SegmentToggleStyle}">
                                            <Setter Property="Margin" Value="0,0,6,0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Summarization}">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <ToggleButton Content="Export"
                                              MinWidth="80"
                                              Command="{Binding SetPanelCommand}"
                                              CommandParameter="{x:Static vm:SessionDetailPanel.Export}"
                                              Grid.Column="3">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource SegmentToggleStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Export}">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- Panel Content -->
                        <Grid Grid.Row="2" VerticalAlignment="Top">
                            <!-- Day Panel -->
                            <Grid Visibility="Collapsed">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Day}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Summary" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                    <Border Grid.Row="1" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                            CornerRadius="8"
                                            Padding="12">
                                        <TextBlock Text="Summary pending or viewable in tools."
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </Grid>
                            </Grid>

                            <!-- Mining Panel -->
                            <Grid Visibility="Collapsed">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Mining}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Mine Git History" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,12"/>
                                    <UniformGrid Grid.Row="1" Columns="3" Rows="1" Margin="0,0,0,8">
                                        <ui:Button Content="Last 7 Days"
                                                   Icon="{ui:SymbolIcon Calendar24}"
                                                   Appearance="Primary"
                                                   Command="{Binding Mining.MineLast7DaysCommand}"
                                                   IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"
                                                   Margin="0,0,8,0"
                                                   Height="40"/>
                                        <ui:Button Content="Last 14 Days"
                                                   Icon="{ui:SymbolIcon Calendar24}"
                                                   Appearance="Primary"
                                                   Command="{Binding Mining.MineLastDaysCommand}"
                                                   IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"
                                                   Margin="0,0,8,0"
                                                   Height="40"/>
                                        <ui:Button Content="Last 30 Days"
                                                   Icon="{ui:SymbolIcon Calendar24}"
                                                   Appearance="Primary"
                                                   Command="{Binding Mining.MineLast30DaysCommand}"
                                                   IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}"
                                                   Height="40"/>
                                    </UniformGrid>
                                    <ui:Button Grid.Row="2" Content="Stop Mining"
                                               Icon="{ui:SymbolIcon Stop24}"
                                               Appearance="Danger"
                                               Command="{Binding Mining.StopCommand}"
                                               IsEnabled="{Binding Mining.IsMining}"
                                               Height="36"/>
                                </Grid>
                            </Grid>

                            <!-- Summarization Panel -->
                            <Grid Visibility="Collapsed">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Summarization}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="AI Summarization" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,12"/>
                                    <ui:Button Grid.Row="1" Content="Summarize All Pending Days"
                                               Icon="{ui:SymbolIcon Sparkle24}"
                                               Appearance="Primary"
                                               Command="{Binding Summarization.SummarizePendingDaysCommand}"
                                               IsEnabled="{Binding Summarization.IsSummarizing, Converter={StaticResource InverseBoolConverter}}"
                                               Height="40"
                                               Margin="0,0,0,8"/>
                                    <ui:Button Grid.Row="2" Content="Stop Summarization"
                                               Icon="{ui:SymbolIcon Stop24}"
                                               Appearance="Danger"
                                               Command="{Binding Summarization.StopCommand}"
                                               IsEnabled="{Binding Summarization.IsSummarizing}"
                                               Height="36"/>
                                </Grid>
                            </Grid>

                            <!-- Export Panel -->
                            <Grid Visibility="Collapsed">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPanel}" Value="{x:Static vm:SessionDetailPanel.Export}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="0,4,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="8"
                                                Padding="10"
                                                Margin="0,0,8,0">
                                            <StackPanel>
                                                <TextBlock Text="FROM"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="0,0,0,6"/>
                                                <DatePicker SelectedDate="{Binding Export.StartDate}"
                                                            BorderThickness="0"
                                                            Background="Transparent"/>
                                            </StackPanel>
                                        </Border>

                                        <ui:SymbolIcon Grid.Column="1"
                                                       Symbol="ArrowRight24"
                                                       VerticalAlignment="Center"
                                                       Margin="12,0"/>

                                        <Border Grid.Column="2"
                                                Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="8"
                                                Padding="10"
                                                Margin="8,0,0,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="TO"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="0,0,0,6"/>
                                                <DatePicker Grid.Row="1" SelectedDate="{Binding Export.EndDate}"
                                                            BorderThickness="0"
                                                            Background="Transparent"/>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:Button Grid.Column="0" Content="Developer Diary"
                                                   Icon="{ui:SymbolIcon Document24}"
                                                   Appearance="Primary"
                                                   Command="{Binding Export.ExportDeveloperDiaryCommand}"
                                                   Height="40"
                                                   Margin="0,0,8,0"/>
                                        <ui:Button Grid.Column="1" Content="Resume Bullets"
                                                   Icon="{ui:SymbolIcon DocumentBulletList24}"
                                                   Appearance="Primary"
                                                   Command="{Binding Export.ExportResumeBulletsCommand}"
                                                   Height="40"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
