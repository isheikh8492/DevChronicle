<Page
    x:Class="DevChronicle.Views.SessionDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Session Detail"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}, FallbackValue=800}">
        <Grid x:Name="RootGrid" Margin="56,24,56,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Session Header Card  -->
            <ui:Card Grid.Row="0" Margin="0,0,0,8">
                <Border Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Session Info  -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock
                                FontSize="24"
                                FontWeight="SemiBold"
                                Text="{Binding Session.Name, FallbackValue='Loading...', TargetNullValue='Loading...'}" />
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="14"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run Text="Repository: " />
                                <Run Text="{Binding Session.RepoPath, Mode=OneWay, FallbackValue='...', TargetNullValue='...'}" />
                            </TextBlock>
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="14"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run Text="Created: " />
                                <Run Text="{Binding Session.CreatedAt, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm', FallbackValue='...', TargetNullValue='...'}" />
                            </TextBlock>
                        </StackPanel>

                        <!--  Actions  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,8,0"
                                Appearance="Secondary"
                                Click="Button_Click"
                                Command="{Binding BackToSessionsCommand}"
                                Content="Back to Sessions"
                                Icon="{ui:SymbolIcon ArrowLeft24}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </ui:Card>

            <!--  Summarization Navbar  -->
            <ui:Card Grid.Row="1" Margin="0,0,0,8">
                <Border Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Appearance="Primary"
                            Command="{Binding Summarization.SummarizeSelectedDayCommand}"
                            CommandParameter="{Binding DayBrowser.SelectedDay}"
                            Content="Summarize Selected"
                            Icon="{ui:SymbolIcon Sparkle24}">
                            <ui:Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource SelectedDayAndNotSummarizingConverter}">
                                    <Binding Path="DayBrowser.SelectedDay" />
                                    <Binding Path="Summarization.IsSummarizing" />
                                </MultiBinding>
                            </ui:Button.IsEnabled>
                        </ui:Button>

                        <ui:Button
                            Grid.Column="1"
                            Margin="0,0,10,0"
                            Appearance="Primary"
                            Command="{Binding Summarization.SummarizePendingDaysCommand}"
                            Content="Summarize All Pending Days"
                            Icon="{ui:SymbolIcon Sparkle24}"
                            IsEnabled="{Binding Summarization.IsSummarizing, Converter={StaticResource InverseBoolConverter}}" />

                        <ui:Button
                            Grid.Column="2"
                            Appearance="Danger"
                            Command="{Binding Summarization.StopCommand}"
                            Content="Stop Summarizing"
                            Icon="{ui:SymbolIcon Stop24}"
                            IsEnabled="{Binding Summarization.IsSummarizing}" />

                        <StackPanel
                            Grid.Column="5"
                            Margin="0,10,0,0"
                            Visibility="{Binding Summarization.ShowStatusPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding Summarization.Status}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding Summarization.RecoverActionText}"
                                Visibility="{Binding Summarization.HasRecoverableIssue, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding Summarization.ProgressCounterText}"
                                Visibility="{Binding Summarization.HasProgressCounter, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <ProgressBar
                                Height="4"
                                Margin="0,6,0,0"
                                IsIndeterminate="{Binding Summarization.IsProgressIndeterminate}"
                                Maximum="100"
                                Minimum="0"
                                Value="{Binding Summarization.Progress}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </ui:Card>

            <!--  Main Content: Day List + Detail Pane (No page scroll)  -->
            <Grid x:Name="MainContentGrid" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Left: Day Cards List  -->
                <ui:Card
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top">
                    <ui:Card.ContextMenu>
                        <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                            <MenuItem
                                Command="{Binding Mining.ReMineCommand}"
                                Header="Re-Mine"
                                IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}" />
                            <MenuItem
                                Command="{Binding Mining.ReMineKeepSummariesCommand}"
                                Header="Re-Mine (Keep Summaries &amp; Evidence)"
                                IsEnabled="{Binding Mining.IsMining, Converter={StaticResource InverseBoolConverter}}" />
                        </ContextMenu>
                    </ui:Card.ContextMenu>
                    <Grid Margin="16,20,16,16" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,0,8"
                            VerticalAlignment="Top"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Days in This Session" />

                        <ListBox
                            Grid.Row="1"
                            MinHeight="0"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding DayBrowser.Days}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding DayBrowser.SelectedDay, Mode=TwoWay}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,10"
                                        Padding="12"
                                        BorderBrush="#4A4F54"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Border.Background>
                                            <SolidColorBrush Color="#3D4246" />
                                        </Border.Background>
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#AFC4D9" />
                                                        <Setter Property="BorderThickness" Value="1.5" />
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation
                                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                        To="#3F4B5A"
                                                                        Duration="0:0:0.15" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation
                                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                        To="#3D4246"
                                                                        Duration="0:0:0.15" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.InputBindings>
                                            <MouseBinding
                                                Command="{Binding DataContext.DayBrowser.SelectDayCommand, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                                CommandParameter="{Binding}"
                                                MouseAction="LeftClick" />
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Border
                                                Grid.RowSpan="2"
                                                Grid.Column="0"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="#bd7cff" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                                                <Setter Property="Background" Value="#8FB7E6" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{Binding Date, StringFormat=MMM dd\, yyyy}" />

                                            <Border
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Padding="8,4"
                                                HorizontalAlignment="Right"
                                                Background="#bd7cff"
                                                CornerRadius="8">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="White"
                                                    Text="{Binding Status}" />
                                            </Border>

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="10,6,0,0"
                                                FontSize="11"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding CommitCount, Mode=OneWay}" /><Run Text=" " /><Run Text="commits" />
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="10,6,0,0"
                                                HorizontalAlignment="Right"
                                                FontSize="11"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                <Run
                                                    FontWeight="SemiBold"
                                                    Foreground="#3FB950"
                                                    Text="+" />
                                                <Run
                                                    FontWeight="SemiBold"
                                                    Foreground="#3FB950"
                                                    Text="{Binding Additions, Mode=OneWay}" />
                                                <Run Text=" / " />
                                                <Run
                                                    FontWeight="SemiBold"
                                                    Foreground="#F85149"
                                                    Text="-" />
                                                <Run
                                                    FontWeight="SemiBold"
                                                    Foreground="#F85149"
                                                    Text="{Binding Deletions, Mode=OneWay}" />
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ui:InfoBar
                                Title="Mining in progress"
                                Grid.Row="0"
                                IsClosable="False"
                                IsOpen="True"
                                Message="{Binding Mining.Status}"
                                Severity="Informational"
                                Visibility="{Binding Mining.IsMining, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <ProgressBar
                                Grid.Row="1"
                                Height="4"
                                Margin="0,8,0,0"
                                IsIndeterminate="{Binding Mining.IsProgressIndeterminate}"
                                Maximum="100"
                                Minimum="0"
                                Visibility="{Binding Mining.IsMining, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Value="{Binding Mining.Progress}" />

                            <ui:InfoBar
                                Title="No Days Found"
                                Grid.Row="2"
                                IsClosable="False"
                                IsOpen="True"
                                Message="Mine commits to populate this session with days."
                                Severity="Informational">
                                <ui:InfoBar.Visibility>
                                    <MultiBinding Converter="{StaticResource CountAndNotMiningToVisibilityConverter}">
                                        <Binding Path="DayBrowser.Days.Count" />
                                        <Binding Path="Mining.IsMining" />
                                    </MultiBinding>
                                </ui:InfoBar.Visibility>
                            </ui:InfoBar>
                        </Grid>
                    </Grid>
                </ui:Card>

                <!--  Right: Detail Pane with Segmented Switch  -->
                <ui:Card
                    x:Name="DetailPaneCard"
                    Grid.Column="2"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top">
                    <Border Padding="20,20,20,16" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Selected Day Header  -->
                            <Grid
                                Grid.Row="0"
                                Margin="0,0,0,12"
                                VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,0,0,8"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{Binding DayBrowser.SelectedDay.Date, Mode=OneWay, StringFormat='MMMM dd, yyyy', FallbackValue='Select a day', TargetNullValue='Select a day'}" />
                                <TextBlock
                                    Grid.Row="1"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <Run Text="Commits: " />
                                    <Run Text="{Binding DayBrowser.SelectedDay.CommitCount, Mode=OneWay, FallbackValue='-'}" />
                                    <Run Text="   Additions: " />
                                    <Run Text="{Binding DayBrowser.SelectedDay.Additions, Mode=OneWay, FallbackValue='-'}" />
                                    <Run Text="   Deletions: " />
                                    <Run Text="{Binding DayBrowser.SelectedDay.Deletions, Mode=OneWay, FallbackValue='-'}" />
                                </TextBlock>
                                <Border
                                    Grid.Row="2"
                                    Height="1"
                                    Margin="0,12,0,0"
                                    Background="{DynamicResource CardStrokeColorDefaultBrush}" />
                            </Grid>

                            <!--  Summary + Evidence Tabs  -->
                            <Grid
                                x:Name="TabsContainerGrid"
                                Grid.Row="1"
                                MinHeight="0"
                                VerticalAlignment="Stretch">
                                <TabControl x:Name="DetailTabControl" MinHeight="0">
                                    <TabItem Header="Summary">
                                        <ScrollViewer
                                            x:Name="SummaryScrollViewer"
                                            MaxHeight="{Binding ActualHeight, ElementName=TabsContainerGrid, FallbackValue=400}"
                                            HorizontalScrollBarVisibility="Disabled"
                                            VerticalScrollBarVisibility="Auto">
                                            <StackPanel Margin="0,12,0,12">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="8" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <ui:Button
                                                        Grid.Column="1"
                                                        Appearance="Primary"
                                                        Command="{Binding SaveEditedSummaryCommand}"
                                                        Content="Save"
                                                        Visibility="{Binding IsEditingSummary, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                    <ui:Button
                                                        Grid.Column="3"
                                                        Appearance="Secondary"
                                                        Command="{Binding CancelEditSummaryCommand}"
                                                        Content="Cancel"
                                                        Visibility="{Binding IsEditingSummary, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                    <ui:Button
                                                        Grid.Column="4"
                                                        Appearance="Secondary"
                                                        Click="EditSummaryButton_Click"
                                                        Command="{Binding StartEditSummaryCommand}"
                                                        Content="Edit"
                                                        Visibility="{Binding IsEditingSummary, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                                </Grid>

                                                <Border
                                                    MinHeight="180"
                                                    Padding="10"
                                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                    <TextBox
                                                        x:Name="SummaryEditorTextBox"
                                                        Padding="0"
                                                        AcceptsReturn="True"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        CaretBrush="{DynamicResource TextFillColorPrimaryBrush}"
                                                        FocusVisualStyle="{x:Null}"
                                                        Focusable="{Binding IsEditingSummary}"
                                                        FontSize="13"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsHitTestVisible="{Binding IsEditingSummary}"
                                                        IsReadOnly="False"
                                                        OverridesDefaultStyle="True"
                                                        Text="{Binding EditedSummaryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        TextWrapping="Wrap"
                                                        VerticalScrollBarVisibility="Auto">
                                                        <TextBox.Template>
                                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Background="{TemplateBinding Background}"
                                                                    Focusable="False"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}" />
                                                            </ControlTemplate>
                                                        </TextBox.Template>
                                                    </TextBox>
                                                </Border>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>

                                    <TabItem Header="Evidence">
                                        <ScrollViewer
                                            x:Name="EvidenceScrollViewer"
                                            MaxHeight="{Binding ActualHeight, ElementName=TabsContainerGrid, FallbackValue=400}"
                                            HorizontalScrollBarVisibility="Disabled"
                                            VerticalScrollBarVisibility="Auto">
                                            <StackPanel Margin="8,12,8,12">
                                                <ItemsControl ItemsSource="{Binding SelectedDayBranches}">
                                                    <ItemsControl.Style>
                                                        <Style TargetType="ItemsControl">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasSelectedDayBranches}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ItemsControl.Style>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="0,0,0,12"
                                                                Padding="10"
                                                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="8">
                                                                <StackPanel>
                                                                    <TextBlock FontWeight="SemiBold">
                                                                        <Run Text="Branch: " />
                                                                        <Run Text="{Binding BranchName, Mode=OneWay}" />
                                                                        <Run Text=" (" />
                                                                        <Run Text="{Binding CommitCount, Mode=OneWay}" />
                                                                        <Run Text=" commits)" />
                                                                    </TextBlock>
                                                                    <ItemsControl ItemsSource="{Binding Commits}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock
                                                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ViewportWidth}"
                                                                                    Margin="12,4,0,0"
                                                                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                                    TextWrapping="Wrap">
                                                                                    <Run Text="[" />
                                                                                    <Run Text="{Binding Sha, Mode=OneWay}" />
                                                                                    <Run Text="] " />
                                                                                    <Run Text="{Binding Subject, Mode=OneWay}" />
                                                                                </TextBlock>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <ItemsControl ItemsSource="{Binding SelectedDayEvidence}">
                                                    <ItemsControl.Style>
                                                        <Style TargetType="ItemsControl">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasSelectedDayEvidence}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ItemsControl.Style>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="0,0,0,10"
                                                                Padding="10"
                                                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="8">
                                                                <StackPanel>
                                                                    <TextBlock FontWeight="SemiBold">
                                                                        <Run Text="[" />
                                                                        <Run Text="{Binding Sha, Mode=OneWay}" />
                                                                        <Run Text="] " />
                                                                        <Run Text="{Binding Subject, Mode=OneWay}" />
                                                                    </TextBlock>
                                                                    <ItemsControl ItemsSource="{Binding Files}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock
                                                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ViewportWidth}"
                                                                                    Margin="12,4,0,0"
                                                                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                                    TextWrapping="Wrap">
                                                                                    <Run Text="{Binding Path, Mode=OneWay}" />
                                                                                    <Run Text=" (+" />
                                                                                    <Run Text="{Binding Additions, Mode=OneWay}" />
                                                                                    <Run Text=" / -" />
                                                                                    <Run Text="{Binding Deletions, Mode=OneWay}" />
                                                                                    <Run Text=")" />
                                                                                </TextBlock>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                    Text="No evidence yet for this day.">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasAnySelectedDayEvidence}" Value="False">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </Border>
                </ui:Card>
            </Grid>
        </Grid>
    </Grid>
</Page>
