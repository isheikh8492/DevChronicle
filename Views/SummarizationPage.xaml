<Page x:Class="DevChronicle.Views.SummarizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Summarization"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <ScrollViewer>
        <StackPanel Margin="56,24,56,24">
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="AI Summarization"
                Margin="0,0,0,8"/>
            <TextBlock
                FontSize="14"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Generate bullet-point summaries from mined commits using OpenAI."
                Margin="0,0,0,24"/>

            <ui:Card Margin="0,0,0,16">
                <StackPanel Margin="20">
                    <TextBlock FontSize="16" FontWeight="Medium" Text="Summarization Controls" Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <ui:Button
                            Content="Summarize Pending Days"
                            Icon="{ui:SymbolIcon Sparkle24}"
                            Appearance="Primary"
                            Margin="0,0,12,0"/>
                        <ui:Button
                            Content="Review Days"
                            Icon="{ui:SymbolIcon DocumentBulletList24}"
                            Margin="0,0,12,0"/>
                        <ui:Button
                            Content="Stop"
                            Icon="{ui:SymbolIcon Stop24}"
                            Appearance="Danger"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <ui:Card>
                <StackPanel Margin="20">
                    <TextBlock FontSize="16" FontWeight="Medium" Text="Summarization Progress" Margin="0,0,0,16"/>
                    <ProgressBar Value="0" IsIndeterminate="False" Height="4" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Days Summarized"/>
                            <TextBlock FontSize="20" FontWeight="Medium" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Pending Days"/>
                            <TextBlock FontSize="20" FontWeight="Medium" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Status"/>
                            <TextBlock FontSize="14" Text="Idle" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>
